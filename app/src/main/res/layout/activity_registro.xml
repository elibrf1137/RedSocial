<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background8"
    tools:context="com.example.redsocial.usuarios.RegistroActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-35dp">

    <TextView
        android:id="@+id/registroTextView"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="Create"
        android:textColor="#ffffff"
        android:textSize="54sp"
        app:layout_constraintBottom_toTopOf="@+id/registroEmaileditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/registroEmaileditText"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_below="@id/registroUsernameEditText"
        android:layout_marginStart="30dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="23dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="20dp"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/registroUsernameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registroUsernameEditText"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_below="@id/registroTextView"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/usuariodeperfil"
        android:drawablePadding="20dp"
        android:hint="Username"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/registroPasswordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registroEmaileditText" />

    <EditText
        android:id="@+id/registroPasswordEditText"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_below="@id/registroTextView"
        android:layout_marginBottom="23dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/bloquear"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/registroConfirmPasswordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registroUsernameEditText" />

    <EditText
        android:id="@+id/registroConfirmPasswordEditText"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_below="@id/registroTextView"
        android:layout_marginBottom="94dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/bloquear"
        android:drawablePadding="20dp"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registroPasswordEditText" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:background="#00FAFAFA"
        android:onClick="createUser"
        android:text="Register"
        android:textColor="#FDFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registroConfirmPasswordEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>
