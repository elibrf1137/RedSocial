<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MisFavoritosFragment"
    android:background="@drawable/background8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/misFavoritosTV"
            android:layout_width="314dp"
            android:layout_height="104dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="Favoritos"
            android:textColor="#ffffff"
            android:textSize="54sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/publicacionesFavoritasRV"
            android:layout_width="344dp"
            android:layout_height="470dp"
            android:layout_margin="20dp"
            android:layout_marginTop="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/misFavoritosTV"
            app:layout_constraintVertical_bias="0.165" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>